<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <FrameLayout
            android:id="@id/t_dialog__header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"/>

    <ch.temparus.android.advancedrecyclerview.AdvancedRecyclerView
            android:id="@+id/t_dialog__holder_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/t_dialog__footer_container"
            android:layout_below="@id/t_dialog__header_container"
            android:focusable="true"/>

    <FrameLayout
            android:id="@id/t_dialog__footer_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>
</RelativeLayout>